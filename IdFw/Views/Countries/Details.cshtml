@model IdFw.Models.Country

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Country</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
    <div class="row" id="addedCity">
        @foreach (var item in Model.Cities)
        {
            Html.RenderPartial("_DisplayCityInfo", item);
        }
    </div>
</div>

<p>
    @Ajax.ActionLink("Add city", "_AddCity", new { id = Model.Id }, new AjaxOptions {
    HttpMethod = "GET",
    UpdateTargetId = "addCityResult",
    OnBegin = "$('#addCityResult').show()"
}) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


<div id="addCityResult">

</div>